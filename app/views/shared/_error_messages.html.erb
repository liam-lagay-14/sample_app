<% if @user.errors.any? %>
	<div id="error-explanation">
	  <div class="alert alert-danger">
	    The form contains <%= pluralize(@user.errors.count, 'error') %>
	  </div>
	  <ul>
	    <% @user.errors.full_messages.each do |full_message| %>
	        <li>* <%= full_message %> </li>
	    <% end %>
	  </ul>
	</div>
<% end %>