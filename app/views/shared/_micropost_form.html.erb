<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<div class="field">
	  <%= f.text_area :content, placeholder: 'Please enter some content' %>
	</div>
    <span class="countdown_indicator"></span>
	<%= f.submit 'Post', class: 'btn btn-lg btn-primary' %>
<% end %>